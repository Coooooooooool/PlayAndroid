<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".module.navigate.fragment.NavigateFragment">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_below="@id/titlebar"
        tools:listitem="@layout/rv_item_navigate_left"/>

    <View
        android:layout_width="@dimen/dp_0_5"
        android:layout_height="match_parent"
        android:background="@color/gray_e9e9e9"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_below="@id/titlebar"
        android:layout_toRightOf="@id/rv_left"
        tools:listitem="@layout/rv_item_navigate_right"/>

</LinearLayout>